pipeline {
    agent any

    stages {
        stage('Initialize Terraform') {
            steps {
                dir('terraform') {
                    terraformWrapper([
                        terraformInstallation: 'Terraform 1.5.2'
                    ]) {
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Run Terraform') {
            steps {
                dir('terraform') {
                    terraformWrapper([
                        terraformInstallation: 'Terraform 1.5.2'
                    ]) {
                        sh 'terraform plan' // Replace with your desired Terraform commands
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }
    }
}
