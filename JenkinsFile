pipeline {
    agent any

    stages {
        stage('Install Terraform') {
            steps {
                sh 'curl -LO https://releases.hashicorp.com/terraform/0.14.10/terraform_0.14.10_linux_amd64.zip'
                sh 'unzip terraform_0.14.10_linux_amd64.zip'
                sh 'mkdir -p $HOME/bin'
                sh 'mv terraform $HOME/bin/'
            }
        }

        stage('Initialize Terraform') {
            steps {
                dir('terraform') {
                    sh '$HOME/bin/terraform init'
                }
            }
        }

        stage('Run Terraform') {
            steps {
                dir('terraform') {
                    sh '$HOME/bin/terraform plan' // Replace with your desired Terraform commands
                    sh '$HOME/bin/terraform apply'
                }
            }
        }
    }
}
